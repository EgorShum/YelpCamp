<% include ../partials/header%>
    <div class="container">
        <header class="jumbotron" style="margin: 20px auto">
                <div class="container">
                    <h1> Welcome To YelpCamp!</h1>
                    <p>View our hand-picked campgrounds from all over the world</p>
                    <p>
                        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                    </p>
                </div>
        </header>
        <div class="row text-center">
            <% campgrounds.forEach(function(item){ %>
                <div class="col-xl-3 col-lg-4 col-md-6 ">
                    <div class="card" style="margin-top: 10px">
                        <img  class="card-img-top" src="<%= item.image %>" alt="Image is invalid" style="height: 11em" >
                        <div>
                            <h4><%=item.name%></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= item._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>
<% include ../partials/footer%>